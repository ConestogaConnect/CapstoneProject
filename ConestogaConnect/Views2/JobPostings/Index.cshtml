                    <div class="col-sm-8">@Html.TextBox("desc", null, new { @class = "form-control" })</div>
                </div>
                <div class="col-xs-12 col-md-3">
                    <div class="col-sm-4">Type</div>
                    <div class="col-sm-8">@Html.TextBox("type", null, new { @class = "form-control" })</div>
                </div>
            </div>
            <br />

            <div class="row">
