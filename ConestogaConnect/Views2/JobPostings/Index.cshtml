        <script src="~/Content/datepicker/jquery-ui.js"></script>

        <script type="text/javascript">
            var dateFormat = "dd/mm/yy";
            $(document).ready(function () {
                var pdfrom = $("#pdfrom").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    dateFormat: dateFormat,
                    numberOfMonths: 1
                }).on("change", function () {
                    pdto.datepicker("option", "minDate", getDate(this));
                }),
                    pdto = $("#pdto").datepicker({
                        defaultDate: "+1w",
                        changeMonth: true,
                        dateFormat: dateFormat,
                        numberOfMonths: 1
                    }).on("change", function () {
                        pdfrom.datepicker("option", "maxDate", getDate(this));
                    });

                var ufrom = $("#ufrom").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    dateFormat: dateFormat,
                    numberOfMonths: 1
                }).on("change", function () {
                    uto.datepicker("option", "minDate", getDate(this));
                }),
                    uto = $("#uto").datepicker({
                        defaultDate: "+1w",
                        changeMonth: true,
                        dateFormat: dateFormat,
                        numberOfMonths: 1
                    }).on("change", function () {
                        ufrom.datepicker("option", "maxDate", getDate(this));
                    });
            });

            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }
                return date;
            }
        </script>
